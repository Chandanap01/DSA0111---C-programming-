#include<iostream>
using namespace std;
int main()
{
	int a[5],n,sum=0,i;
	float avg;
	cout<<"enter the number"<<endl;
	cin>>n;
	cout<<"enter numbers into an array"<<endl;
	for(i=1;i<=n;i++)
	{
		cin>>a[i];
		sum=sum+a[i];
	}
	avg=static_cast<float>(sum)/n;
	cout<<"the average of"<<n<<"numbers is"<<avg;
	return 0;
	
}
